pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                sh'''
                aws ecr get-login-password --region us-west-2 | sudo docker login --username AWS --password-stdin 437793241539.dkr.ecr.us-west-2.amazonaws.com
                sudo docker build -t 437793241539.dkr.ecr.us-west-2.amazonaws.com/static-app-docker-image-registry:$BUILD_NUMBER .
                sudo docker push 437793241539.dkr.ecr.us-west-2.amazonaws.com/static-app-docker-image-registry:$BUILD_NUMBER'''
            }
        }
        stage('deployment'){
            steps{
                sh'''
                cd workspace/microservice/k8s code
                kubectl apply -f .
            '''
            }
        }
    }
}
